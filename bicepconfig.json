{
  "analyzers": {
    "core": {
      "enabled": true,
      "rules": {
        "no-unused-params": {
          "level": "off"
        },
        "no-hardcoded-env-urls": {
          "level": "off",
          "excludeUrls": [
            "https://management.azure.com",
            "https://graph.windows.net"
          ]
        },
        "secure-parameter-default": {
          "level": "off"
        },
        "max-outputs": {
          "level": "off",
          "maxNumberOfOutputs": 10
        },
        "max-params": {
          "level": "off",
          "maxNumberOfParams": 20
        },
        "max-resources": {
          "level": "off",
          "maxNumberOfResources": 50
        },
        "max-variables": {
          "level": "off",
          "maxNumberOfVariables": 20
        },
        "prefer-interpolation": {
          "level": "off"
        },
        "secure-secrets-in-params": {
          "level": "off"
        },
        "use-secure-value-for-secure-inputs": {
          "level": "off"
        },
        "secure-params-in-nested-deploy": {
          "level": "off"
        },
        "simplify-interpolation": {
          "level": "off"
        }
      }
    }
  }
}